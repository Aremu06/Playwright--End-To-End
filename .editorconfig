root = true

# global definition
[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

# specific definitions
[*.{js,ts}]
indent_style = space
indent_size = 2

[*.md]
max_line_length = 120
trim_trailing_whitespace = false

[{Makefile,*.mk}]
indent_style = tab
tab_width = 4

[*.json]
indent_style = space
indent_size = 2

[*.sh]
indent_style = tab
indent_size = 4

[*.{yaml,yml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[Dockerfile]
indent_style = tab
indent_size = 4
